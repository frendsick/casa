# Define global variables
1 = global_a
2 = global_b

# Function that adds the global variables together
fn global_add -> int {
    global_a global_b +
}

# Function that adds its parameters together
fn local_add a:int b:int -> int {
    a b +
}

# Add `global_a` and `global_b` together
global_add print

# Update the value of `global_a`
40 = global_a

# Add `global_a` and `global_b` together again
global_add print

# Add two integers together using local variables
34 35 local_add print
